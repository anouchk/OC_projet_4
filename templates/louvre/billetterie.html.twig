{% extends 'base.html.twig' %}

{% form_theme formCommande  'bootstrap_4_layout.html.twig' %}

{% block body %}

    <h1>
    	{% if modifyMode %}
     		Modifier votre commande
     	{% else %}
     		Réserver vos billets pour le musée
     	{% endif %}
    </h1>

    {{ form_start(formCommande, {'attr': {'novalidate': 'novalidate'}}) }}

    {{ form_row(formCommande.dateVisite) }}

    {{ form_end(formCommande) }}

    <p><b>Billet 1 </b></p>

     {{ form_start(formBillet, {'attr': {'novalidate': 'novalidate'}}) }}

     {{ form_row(formBillet.nom, {'attr': {'placeholder': "Nom du visiteur"}}) }}
     {{ form_row(formBillet.prenom, {'attr': {'placeholder': "Prénom du visiteur"}}) }}
     {{ form_row(formBillet.typeBillet) }}
     {{ form_row(formBillet.pays) }}
     {{ form_row(formBillet.dateNaissance) }}
     {{ form_row(formBillet.tarifReduit) }}

     {{ form_end(formBillet) }}

     <button type="submit" class="btn btn-success">
     	{% if modifyMode %}
     		Enregistrer la modification de la commande
     	{% else %}
     	Réserver
     	{% endif %}
     </button>

    <p> <b>Billet 1</b>

    <form >
		<p><label> Nom : </label> <input class="input_large" type="text" name="nom_billet" value="" ></p>
		<p><label> Prénom : </label> <input class="input_large" type="text" name="prenom_billet" value="" ></p>
		<p><label> Pays: </label> <input class="input_large" type="text" name="pays_billet" value="" ></p>
		<p><label> Date de naissance : </label> <input class="input_large" type="text" name="naissance_billet" value="" ></p>
		<p><label> Type de billet : </label> <input class="input_large" type="text" name="type_billet" value="" ></p>
		<p><label> Tarif réduit: </label> <input class="input_large" type="text" name="tarif_reduit_billet" value="" ></p>
		
		<p><input type="submit" class="btn btn-primary" value="Réserver" ></p>
	</form>
	</p>

	<form action="{{ path('recap') }}" method="post">
	  <fieldset>
	    <legend>Billet 1</legend>
	    <div class="form-group">
	      <label for="">Nom</label>
	      <input class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Nom" type="email">
	      
	    </div>
	    <div class="form-group">
	      <label for="">Prénom</label>
	      <input class="form-control" id="exampleInputPassword1" placeholder="Prénom" type="password">
	    </div>
	    <div class="form-group">
	      <label for="">Pays</label>
	      <input class="form-control" id="exampleInputEmail1" aria-describedby="Pays" placeholder="Nom" type="email">	      
	    </div>
	    <div class="form-group">
	      <label for="">Date de Naissance</label>
	      <input class="form-control" id="exampleInputPassword1" placeholder="Date de naissance" type="password">
	    </div>
	    <div class="form-group">
	      <label for="Pays">Type de billet</label>
	      <select class="form-control" id="Pays">
	        <option>Journée</option>
	        <option>Demi-journée (après 14h)</option>
	      </select>
	    </div>
	    <fieldset class="form-group">
	      <div class="form-check">
	        <label class="form-check-label">
	          <input class="form-check-input" value="" checked="" type="checkbox">
	          Tarif réduit (sur justificatif)
	        </label>
	        <small id="emailHelp" class="form-text text-muted">Voici les conditions d'un tarif réduit</small>
	      </div>
	    </fieldset>
	    <input type ="hidden" name="idBillet" value="">
	    <p><input type="submit" class="btn btn-primary" value="Réserver"></p>
	  </fieldset>
	</form>

{% endblock %}